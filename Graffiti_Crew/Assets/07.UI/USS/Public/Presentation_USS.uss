.movie-top {
    background-color: rgb(0, 0, 0);
    height: 100px;
    top: -10%;
    transition-duration: 0.45s;
}

.movie-bottom {
    background-color: rgb(0, 0, 0);
    height: 100px;
    transition-duration: 0.45s;
    bottom: -10%;
}

.movie-top-center {
    top: 0;
}

.movie-bottom-center {
    bottom: 0;
}
