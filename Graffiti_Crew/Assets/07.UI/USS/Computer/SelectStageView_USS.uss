.selectStage-description-top-container {
    padding-top: 15px;
    padding-right: 15px;
    padding-bottom: 20px;
    padding-left: 15px;
    flex-basis: 50%;
    height: 100%;
}

.selectStage-description-bottom-container {
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.selectStage-description-TLeft-content {
    align-items: center;
    justify-content: center;
    background-image: url("project://database/Assets/02.Sprite/UI/Computer/Desktop/Stage/selectStage-content1.png?fileID=21300000&guid=82449281e71a24a46b65194e5b4369a2&type=3#selectStage-content1");
    flex-grow: 1;
}

.selectStage-description-TRight-content {
    flex-grow: 1;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
}

.selectStage-description-BLeft-content {
    align-items: flex-end;
    background-image: url("project://database/Assets/02.Sprite/UI/Computer/Desktop/Stage/selectStage-content2.png?fileID=21300000&guid=a7e6baa8562dbf44badfd4bb52efc1b9&type=3#selectStage-content2");
