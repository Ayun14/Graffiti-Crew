}

.not-clear {
    -unity-background-image-tint-color: rgb(111, 111, 111);
}

.buy-btn {
    flex-grow: 0;
    width: 22%;
    height: 80%;
    background-color: rgba(188, 188, 188, 0);
    border-left-color: rgba(149, 149, 149, 0);
    border-right-color: rgba(149, 149, 149, 0);
    border-top-color: rgba(149, 149, 149, 0);
    border-bottom-color: rgba(149, 149, 149, 0);
    background-image: url("project://database/Assets/02.Sprite/UI/Computer/Desktop/Shop/Product/shop-product-buy.png?fileID=21300000&guid=b4d06ff60d030d94382c66c4d0789a6a&type=3#shop-product-buy");
    min-width: 150px;
    min-height: 110px;
}

.buy-btn:hover {
    -unity-background-image-tint-color: rgb(68, 255, 23);
}

.--------------- {
}

.base-chapter {
    background-image: url("project://database/Assets/02.Sprite/UI/Map/00.Map/map-background.png?fileID=2800000&guid=812900add5c57e445b049aa59a7da4d5&type=3#map-background");
    transition-duration: 1s;
    transition-timing-function: ease;
    width: 100%;
    height: 100%;
    position: absolute;
}

.look-chapter1 {
    scale: 2.4 2.4;
    translate: -22% -44%;
}

.look-chapter2 {
    flex-grow: 0;
    scale: 2.4 2.4;
    translate: 46% -20%;
}
