.selectStage-m-container {
    flex-grow: 1;
}

.selectStage-background {
    flex-grow: 1;
}

.stage-point {
    width: 350px;
    height: 350px;
    position: absolute;
    transition-duration: 0.15s;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    background-color: rgba(0, 0, 0, 0);
    justify-content: flex-end;
    transition-property: scale;
}

.stage-point:hover {
    position: absolute;
    scale: 1.15 1.15;
}

.---------------- {
}

.selectStage-description-top-container {
    padding-top: 15px;
    padding-right: 15px;
    padding-bottom: 20px;
    padding-left: 15px;
    flex-basis: 50%;
    height: 100%;
}

.selectStage-description-bottom-container {
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.selectStage-description-TLeft-content {
    align-items: center;
    justify-content: center;
    background-image: url("project://database/Assets/02.Sprite/UI/Computer/Desktop/Stage/selectStage-content1.png?fileID=21300000&guid=82449281e71a24a46b65194e5b4369a2&type=3#selectStage-content1");
    flex-grow: 1;
}

.selectStage-description-TRight-content {
    flex-grow: 1;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
}

.selectStage-description-BLeft-content {
    align-items: flex-end;
    background-image: url("project://database/Assets/02.Sprite/UI/Computer/Desktop/Stage/selectStage-content2.png?fileID=21300000&guid=a7e6baa8562dbf44badfd4bb52efc1b9&type=3#selectStage-content2");
    width: 100%;
    flex-grow: 1;
    padding-top: 15px;
    padding-right: 30px;
    padding-bottom: 25px;
    padding-left: 25px;
}

.selectStage-description-BRight-content {
    justify-content: flex-end;
    flex-direction: row;
    width: 100%;
    flex-basis: 34%;
}

.graffti-img {
    background-image: url("project://database/Assets/02.Sprite/Graffiti/Rival/Rival1/Food/hamburger2.png?fileID=1515322954&guid=995da855eb8965d419a0bf3b7f8b2a77&type=3#hamburger3_0");
    width: 500px;
    height: 500px;
}

.select-friend-btn {
    width: 200px;
    height: 200px;
    flex-grow: 0;
    margin-top: 20px;
    margin-right: 20px;
    margin-bottom: 20px;
    margin-left: 20px;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    background-image: resource('Sprite/Jia');
    background-color: rgba(0, 0, 0, 0);
}

#unity-content-container {
    flex-direction: column;
}

.friend-btn {
    flex-direction: row;
    background-color: rgb(238, 238, 238);
    margin-bottom: 10px;
    padding-top: 10px;
    padding-right: 10px;
    padding-bottom: 10px;
    padding-left: 10px;
    align-items: center;
}

