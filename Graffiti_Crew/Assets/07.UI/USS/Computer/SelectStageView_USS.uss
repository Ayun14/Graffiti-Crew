}

.base-chapter {
    background-image: url("project://database/Assets/02.Sprite/UI/Map/00.Map/map-background.png?fileID=21300000&guid=98dc32b478c9c294b9b7275daf2bd86b&type=3#map-background");
    transition-duration: 1s;
    transition-timing-function: ease;
    width: 100%;
    height: 100%;
    position: absolute;
    align-items: center;
    justify-content: center;
}
