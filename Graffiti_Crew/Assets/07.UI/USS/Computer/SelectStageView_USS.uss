    padding-top: 15px;
    padding-right: 30px;
    padding-bottom: 25px;
    padding-left: 25px;
}

.selectStage-description-BRight-content {
    justify-content: flex-end;
    flex-direction: row;
    width: 100%;
    flex-basis: 34%;
}

.graffti-img {
    background-image: url("project://database/Assets/02.Sprite/Graffiti/Rival/Rival1/Food/hamburger2.png?fileID=1515322954&guid=995da855eb8965d419a0bf3b7f8b2a77&type=3#hamburger3_0");
    width: 500px;
    height: 500px;
}

#unity-content-container {
    flex-direction: column;
}

