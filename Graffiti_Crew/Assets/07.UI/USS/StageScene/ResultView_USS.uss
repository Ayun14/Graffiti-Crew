.result-container {
    width: 55%;
    padding-top: 20px;
    padding-left: 20px;
    padding-right: 20px;
    position: absolute;
    height: 100%;
    left: 100%;
    transition-duration: 0.7s;
}

.result-in {
    left: 46%;
}

.rival-screen {
    height: 100%;
    flex-grow: 1;
    justify-content: flex-end;
    transition-duration: 0.5s;
}

.button-border {
    flex-direction: row;
    justify-content: flex-end;
    height: 16%;
    padding-bottom: 20px;
    padding-right: 20px;
    transition-duration: 0.7s;
    transition-timing-function: ease-in;
}

.hide-button-border {
    opacity: 0;
}
